<script>
    /* --- GAME CONFIGURATION --- */
    const games = [
        {
            title: "Level 1: Hardware Sorting",
            desc: "Is the device for Input (sending data in), Output (getting data out), or Storage (saving data)?",
            buckets: [
                { id: "input", label: "Input", icon: "âŒ¨ï¸", color: "#007bff" },
                { id: "output", label: "Output", icon: "ðŸ–¥ï¸", color: "#28a745" },
                { id: "storage", label: "Storage", icon: "ðŸ’¾", color: "#6f42c1" }
            ],
            items: [
                { name: "Keyboard", type: "input" },
                { name: "Monitor", type: "output" },
                { name: "Mouse", type: "input" },
                { name: "Printer", type: "output" },
                { name: "Hard Disk", type: "storage" },
                { name: "Webcam", type: "input" },
                { name: "USB Stick", type: "storage" },
                { name: "Speakers", type: "output" },
                { name: "Scanner", type: "input" },
                { name: "DVD-ROM", type: "storage" }
            ]
        },
        {
            title: "Level 2: The System Check",
            desc: "Distinguish between Hardware (Physical parts) and Software (Programs/Code).",
            buckets: [
                { id: "hardware", label: "Hardware", icon: "ðŸ”§", color: "#fd7e14" },
                { id: "software", label: "Software", icon: "ðŸ’¿", color: "#17a2b8" }
            ],
            items: [
                { name: "Motherboard", type: "hardware" },
                { name: "Windows 10", type: "software" },
                { name: "CPU (Processor)", type: "hardware" },
                { name: "MS Word", type: "software" },
                { name: "RAM Stick", type: "hardware" },
                { name: "Google Chrome", type: "software" },
                { name: "Power Supply", type: "hardware" },
                { name: "Video Game App", type: "software" },
                { name: "Graphics Card", type: "hardware" },
                { name: "Antivirus Program", type: "software" }
            ]
        },
        {
            title: "Level 3: Security Shield",
            desc: "Is this item a Threat to your computer, or a form of Protection?",
            buckets: [
                { id: "threat", label: "Threat", icon: "ðŸ¦ ", color: "#dc3545" },
                { id: "protection", label: "Protection", icon: "ðŸ›¡ï¸", color: "#28a745" }
            ],
            items: [
                { name: "Computer Virus", type: "threat" },
                { name: "Firewall", type: "protection" },
                { name: "Phishing Email", type: "threat" },
                { name: "Antivirus", type: "protection" },
                { name: "Spyware", type: "threat" },
                { name: "Strong Password", type: "protection" },
                { name: "Identity Theft", type: "threat" },
                { name: "Data Backup", type: "protection" },
                { name: "Trojan Horse", type: "threat" },
                { name: "Two-Factor Auth", type: "protection" }
            ]
        },
        {
            title: "Level 4: The File Cabinet",
            desc: "Sort these files by their type: Document/Text, Image, or Audio.",
            buckets: [
                { id: "doc", label: "Document", icon: "ðŸ“„", color: "#6c757d" },
                { id: "img", label: "Image", icon: "ðŸ–¼ï¸", color: "#e83e8c" },
                { id: "audio", label: "Audio", icon: "ðŸŽµ", color: "#20c997" }
            ],
            items: [
                { name: "Report.docx", type: "doc" },
                { name: "Sunset.jpg", type: "img" },
                { name: "Song.mp3", type: "audio" },
                { name: "Notes.txt", type: "doc" },
                { name: "Profile.png", type: "img" },
                { name: "VoiceMsg.wav", type: "audio" },
                { name: "Budget.xlsx", type: "doc" },
                { name: "Logo.gif", type: "img" },
                { name: "Podcast.aac", type: "audio" },
                { name: "Resume.pdf", type: "doc" }
            ]
        },
        {
            title: "Level 5: Netiquette Judge",
            desc: "Is this behavior Good Etiquette (Polite/Safe) or Bad Etiquette (Rude/Unsafe)?",
            buckets: [
                { id: "good", label: "Good", icon: "ðŸ‘", color: "#28a745" },
                { id: "bad", label: "Bad", icon: "ðŸ‘Ž", color: "#dc3545" }
            ],
            items: [
                { name: "Subject: Hello", type: "good" },
                { name: "TYPING IN ALL CAPS", type: "bad" },
                { name: "Proofreading", type: "good" },
                { name: "Spamming Chains", type: "bad" },
                { name: "Signing your name", type: "good" },
                { name: "Replying to Spam", type: "bad" },
                { name: "Respecting Copyright", type: "good" },
                { name: "Sharing Passwords", type: "bad" },
                { name: "Checking Facts", type: "good" },
                { name: "Cyberbullying", type: "bad" }
            ]
        }
    ];

    /* --- STATE --- */
    let currentLevelIdx = 0;
    let currentItemIdx = 0;
    let scores = [0, 0, 0, 0, 0]; // Scores for the 5 levels
    let gameActive = false;

    /* --- NAVIGATION --- */
    function changeLevel(val) {
        // Hide all screens
        document.getElementById('intro-screen').classList.add('hidden');
        document.getElementById('game-arena').classList.add('hidden');
        document.getElementById('report-screen').classList.add('hidden');

        if(val === 'intro') {
            document.getElementById('intro-screen').classList.remove('hidden');
        } else if (val === 'report') {
            generateReport();
            document.getElementById('report-screen').classList.remove('hidden');
        } else {
            // It's a game level
            currentLevelIdx = parseInt(val);
            setupLevelUI();
            document.getElementById('game-arena').classList.remove('hidden');
        }
    }

    /* --- GAME LOGIC --- */
    function setupLevelUI() {
        const game = games[currentLevelIdx];
        
        // Update Titles
        document.getElementById('level-title').innerText = game.title;
        document.getElementById('level-desc').innerText = game.desc;
        
        // Reset State
        gameActive = false;
        currentItemIdx = 0;
        document.getElementById('game-item').innerText = "Level Ready";
        document.getElementById('game-item').style.backgroundColor = "#ccc";
        document.getElementById('start-overlay').classList.remove('hidden');
        document.getElementById('feedback-msg').innerText = "";
        document.getElementById('progress-fill').style.width = "0%";

        // Build Buckets
        const bucketContainer = document.getElementById('buckets-container');
        bucketContainer.innerHTML = '';
        
        game.buckets.forEach(b => {
            const div = document.createElement('div');
            div.className = 'bucket';
            div.style.borderColor = b.color;
            div.innerHTML = `<span class="bucket-icon">${b.icon}</span><h3 style="color:${b.color}">${b.label}</h3>`;
            div.onclick = () => handleSort(b.id);
            bucketContainer.appendChild(div);
        });
    }

    function startGame() {
        gameActive = true;
        currentItemIdx = 0;
        document.getElementById('start-overlay').classList.add('hidden');
        showNextItem();
    }

    function showNextItem() {
        if(currentItemIdx >= games[currentLevelIdx].items.length) {
            endLevel();
            return;
        }
        const item = games[currentLevelIdx].items[currentItemIdx];
        const display = document.getElementById('game-item');
        
        display.innerText = item.name;
        // Reset animation
        display.style.animation = 'none';
        display.offsetHeight; /* trigger reflow */
        display.style.animation = 'popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
        display.style.backgroundColor = "var(--accent)";
        
        // Update Progress
        const pct = (currentItemIdx / games[currentLevelIdx].items.length) * 100;
        document.getElementById('progress-fill').style.width = `${pct}%`;
    }

    function handleSort(selectedBucketId) {
        if(!gameActive) return;

        const correctType = games[currentLevelIdx].items[currentItemIdx].type;
        const feedback = document.getElementById('feedback-msg');

        if(selectedBucketId === correctType) {
            scores[currentLevelIdx] += 10; // 10 points per correct item
            updateGlobalScore();
            feedback.innerText = "Correct! âœ…";
            feedback.style.color = "green";
        } else {
            feedback.innerText = "Incorrect âŒ";
            feedback.style.color = "red";
        }

        currentItemIdx++;
        setTimeout(() => {
            feedback.innerText = "";
            showNextItem();
        }, 600);
    }

    function updateGlobalScore() {
        const total = scores.reduce((a, b) => a + b, 0);
        document.getElementById('global-score').innerText = total;
    }

    function endLevel() {
        gameActive = false;
        document.getElementById('game-item').innerText = "Level Complete!";
        document.getElementById('game-item').style.backgroundColor = "#28a745";
        document.getElementById('progress-fill').style.width = "100%";
        document.getElementById('feedback-msg').innerText = `Score: ${scores[currentLevelIdx]}/100`;
        // Optionally suggest next level?
    }

    /* --- REPORT CARD --- */
    function generateReport() {
        const totalScore = scores.reduce((a, b) => a + b, 0);
        const maxScore = 500; // 5 games * 10 items * 10 points
        const percentage = Math.round((totalScore / maxScore) * 100);
        
        let grade = 'F';
        let verdict = "Needs Improvement. Review the notes.";
        if(percentage > 50) { grade = 'C'; verdict = "Competent. Good understanding of basics."; }
        if(percentage > 70) { grade = 'B'; verdict = "Proficient. Very good work!"; }
        if(percentage > 85) { grade = 'A'; verdict = "Digital Expert! Excellent."; }

        document.getElementById('final-grade').innerText = grade;
        document.getElementById('final-verdict').innerText = `${verdict} (${percentage}%)`;

        const container = document.getElementById('report-details');
        container.innerHTML = '';

        games.forEach((game, i) => {
            const score = scores[i];
            const div = document.createElement('div');
            div.className = 'report-item';
            div.innerHTML = `
                <div>
                    <strong>${game.title}</strong><br>
                    <small>${score}/100 Points</small>
                </div>
                <div class="grade-badge" style="background:${score >= 70 ? 'var(--success)' : 'var(--danger)'}">
                    ${score/10}
                </div>
            `;
            container.appendChild(div);
        });
    }

</script>
</body>
</html>
