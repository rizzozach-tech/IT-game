            <div id="progress-bar" style="background:#eee; height:10px; border-radius:5px; width:50%; margin: 0 auto;">
                <div id="progress-fill" style="background:var(--primary); height:100%; width:0%; border-radius:5px; transition:0.3s;"></div>
            </div>
        </div>

        <!-- The Draggable Item -->
        <div>
