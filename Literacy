            <div class="feedback" id="feedback-msg"></div>
        </div>

        <!-- The Buckets -->
        <div id="buckets-container" class="buckets-row">
            <!-- Injected by JS -->
        </div>

        <!-- Start Overlay Button (initially visible) -->
        <div id="start-overlay" style="margin-top:20px;">
            <button class="start-btn" onclick="startGame()">Start This Level</button>
        </div>
    </div>

    <!-- Report Card -->
    <div id="report-screen" class="game-container hidden">
        <h2>Student Performance Report</h2>
        <div class="total-grade" id="final-grade">-</div>
        <p id="final-verdict">Complete games to see the verdict.</p>
        
        <div class="report-grid" id="report-details">
            <!-- Injected by JS -->
        </div>
        
        <div style="margin-top: 40px;">
